<h1>Admin</h1>

<div class="row">
   <div class="col s4">
      <div class="card hoverable">
         <div class="card-content">
            <span class="card-title">
               Users
            </span>
            <p>There are currently <%= @users.count %> registered users.</p>
         </div>
         <div class="card-action">
            <%= link_to "View all Users", admin_pages_users_path  %>
         </div>
      </div>
   </div>

   <div class="col s4">
      <div class="card hoverable">
         <div class="card-content">
            <span class="card-title">
               Projects
            </span>
            <p>There are currently <%= @projects.count %> total Projects.</p>
         </div>
         <div class="card-action">
            <%= link_to "View all Projects", admin_pages_projects_path  %>
         </div>
      </div>
   </div>

   <div class="col s4">
      <div class="card hoverable">
         <div class="card-content">
            <span class="card-title">
               Follows
            </span>
            <p>There are currently <%= @follows.count %> "Follow" relationships between Users and Projects.</p>
         </div>
         <div class="card-action">
            <%= link_to "View all Follows", admin_pages_follows_path  %>
         </div>
      </div>
   </div>
</div>
