<div class="row valign-wrapper">
   <div class="col s6">
      <h3><%= @project.name %> - <%= @project.job_num %></h3>
   </div>
   <div class="col s3">
      <%= render 'projects/follow_form' %>
   </div>
   <div class="col s3">
      <%= link_to "Edit Project", edit_project_path(@project), class: "waves-effect waves-light btn-large right"  %>
   </div>
</div>


<div class="divider"></div>
<div class="section">
   <div class="row">
      <div class="col s4">
         <div class="card">
            <div class="card-content">
               <span class="card-title">Original Contract</span>
               <h4><%= number_to_currency(@project.original_contract_amount) %></h4>
            </div>
         </div>
      </div>
      <div class="col s4">
         <div class="card">
            <div class="card-content">
               <span class="card-title">Change Order Adds</span>
               <h4><%= number_to_currency(@project.approved_change_order_total) %></h4>
            </div>
         </div>
      </div>
      <div class="col s4">
         <div class="card">
            <div class="card-content">
               <span class="card-title">Current Contract</span>
               <h4><%= number_to_currency(@project.current_contract) %></h4>
            </div>
         </div>
      </div>
   </div>
</div>


<div class="divider"></div>
<div class="section">
   <div class="row">
      <div class="col s4">
         <%= render 'projects/change_order_card' %>
      </div>
      <div class="col s4">
         <%= render 'projects/rfi_card' %>
      </div>
      <div class="col s4">
         <%= render 'projects/shipment_card' %>
      </div>
   </div>
</div>


<div class="divider"></div>
<div class="section">
   <div class="row">
      <div class="col s8">
         <h4>Recent Activity</h4>
      </div>
      <div class="col s4">
         <h4>People Following</h4>
         <%= render 'projects/follower_list' %>
      </div>
   </div>
</div>
