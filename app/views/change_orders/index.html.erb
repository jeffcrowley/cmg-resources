<div class="row">
   <div class="col s12">
      <h2>Change Orders - <%= @project.name %></h2>
   </div>
</div>

<div class="divider"></div>
<div class="section">
   <div class="row">
      <div class="col s3">
         <div class="card">
            <div class="card-content">
               <span class="card-title">Total Unapproved Change Order Value</span>
               <h4><%= number_to_currency(total_unapproved_co_value(@project)) %></h4>
            </div>
         </div>
      </div>
      <div class="col s3">
         <div class="card">
            <div class="card-content">
               <span class="card-title">Total Unapproved Labor Value</span>
               <h4><%= number_to_currency(total_unapproved_labor_value(@project)) %></h4>
            </div>
         </div>
      </div>
      <div class="col s3">
         <div class="card">
            <div class="card-content">
               <span class="card-title">Total Approved Change Order Value</span>
               <h4><%= number_to_currency(total_approved_co_value(@project)) %></h4>
            </div>
         </div>
      </div>
      <div class="col s3">
         <div class="card">
            <div class="card-content">
               <span class="card-title">Total Approved Labor Value</span>
               <h4><%= number_to_currency(total_approved_labor_value(@project)) %></h4>
            </div>
         </div>
      </div>
   </div>
</div>

<div class="divider"></div>
<div class="section">
   <% if @project.change_orders.any? %>
      <%= render 'change_orders/change_order_table' %>
   <% else %>
      <h3>There are currently no change orders associated with this project.</h3>
   <% end %>
</div>
